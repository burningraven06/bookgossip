<%= form_tag(authors_path, method: 'get', remote: true) do %>
<div class='marg-top2 col-md-9 pad-zero'> <%= text_field_tag :search, params[:search], class:"form-control", placeholder: "Type to search ...", id:"author_search_textfield" %> </div>
<div class='marg-top2 col-md-3 pad-zero'>
	<button type='submit' class='btn btn-default'> 
		<i class='fa fa-search'></i> Search
	</button> 
</div>
<% end %>
<script type='text/javascript'> 
	$("form").submit(function(){
		$("#jquery_loading").css("display", "block"); 
	}); 
</script>