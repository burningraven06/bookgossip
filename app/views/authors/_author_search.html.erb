<%= form_tag(authors_path, method: 'get', remote: true) do %>
<div class='marg-top2 col-md-9 col-lg-9 col-xs-9 col-sm-9 pad-zero'> 
	<%= text_field_tag :search, params[:search], class:"form-control", placeholder: "Type to search authors or Leave blank to find all", id:"author_search_textfield" %> 
</div>

<div class='marg-top2 col-md-3 col-lg-3 col-xs-3 col-sm-3 pad-zero'>
	<button type='submit' class='btn btn-default' title='Click for results'> 
		<%= image_tag('button_icons/magnifying_glass_24.png') %>	
	</button> 
</div>

<% end %>

<script type='text/javascript'> 
	$("form").submit(function(){
		$("#jquery_loading").css("display", "block"); 
	}); 
</script>