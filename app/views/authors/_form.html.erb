<h1 class='marg-bot text-center' id='form_heading'> </h1> 
<div class='col-md-4 text-center'> <%= image_tag(@author.avatar.url(:medium)) %> </div>
<div class='col-md-4'>
	<%= form_for(@author, html: { multipart: true }, remote: true) do |f| %>
	<style> .col-md-3{padding: 0}.col-md-9{padding: 0}.col-md-6{padding: 0}.col-md-12{padding:0} .col-md-2{padding: 0} .col-md-10{padding: 0} {padding:0;}</style>

	<%= render 'common_form_errors/atauthor_form_errors' %>
	<%= hidden_field_tag :authenticity_token, form_authenticity_token %>

	<div class='col-md-3 '> <%= f.label :name, class:" marg-top" %> </div>
	<div class='col-md-9'> <%= f.text_field :name, class:"form-control marg-bot", placeholder: "Full Name" %> </div>

	<div class='col-md-3'>  <%= f.label :date_of_birth, class:" marg-top" %> </div>
	<div class='col-md-9'>  <%= f.date_field :date_of_birth, class: "form-control marg-bot" %> </div>

	<div class='col-md-3'>  <%= f.label :bio, class:" marg-top" %> </div>
	<div class='col-md-9'>  <%= f.text_area :bio , class:"form-control marg-bot", placeholder: "Tell us something about the author" %> </div>

	<div class='col-md-12 marg-bot'>
		<div class='col-md-6 '> 
			<div class='col-md-2 marg-top'>	<%= f.check_box(:default_avatar) %>	</div>
			<div class='col-md-10 marg-top marg-bot'> <%= f.label(:default_avatar, "Default Author Avatar") %>	</div>
		</div>
		<div class='col-md-6 '>
			<%= f.label "Custom Avatar", class:"marg-top" %>
			<%= f.file_field :avatar, class:"" %>
		</div>
	</div>

	<button type='submit' class='btn btn-default btn-block'> <i class='fa fa-check'></i> Submit</button>

	<% end %>
</div>

<div class='col-md-4'>
	<%= link_to '<i class= "fa fa-chevron-left"></i> Back'.html_safe, authors_path, class:"btn btn-default pull-right" %>
</div>
<script type='text/javascript'> 
	$("form").submit(function(){
		$("#jquery_loading").css("display", "block"); 
	});
</script>