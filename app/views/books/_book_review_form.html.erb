<%= link_to '<i class= "fa fa-chevron-left"></i> Back'.html_safe, book_path(@book), class:"btn btn-default pull-right" %>

<h1 class='marg-bot text-center' id='form_heading'> </h1> 

<div class='col-md-4 col-lg-4 col-xs-4 col-sm-4 pad-zero text-center'> <%= image_tag(@review.cover_page.url(:large)) %> </div>

<div class='col-md-6 col-lg-6 col-xs-6 col-sm-6 pad-zero'>
	<%= form_for(@review, html: {multipart: true}, remote: true, url: book_create_review_path) do |f| %>

	<% render 'common_form_errors/atreview_form_errors' %>
	<%= hidden_field_tag :authenticity_token, form_authenticity_token %>
	<%= hidden_field_tag :user_id, current_user.id %>
	<%= hidden_field_tag :book_id, @book.id %>

	<div class='col-md-3 col-lg-3 col-xs-3 col-sm-3 pad-zero'> <%= f.label :heading, class:" marg-top" %> </div>

	<div class='col-md-9 col-lg-9 col-xs-9 col-sm-9 pad-zero'> <%= f.text_field :heading, class:"form-control marg-bot", placeholder: "review Name" %> </div>

	<div class='col-md-5 col-lg-5 col-xs-5 col-sm-5 marg-top pad-zero'> <%= f.label :status, "Review Status" %> </div>

	<div class='col-md-7 col-lg-7 col-xs-7 col-sm-7 pad-zero marg-top '>
		<%= f.select :status, options_for_select([['Publish', 'publish'], ['Draft', 'draft']], @review.status), {}, class:"form-control", required: true %>
	</div>

	<div class='col-md-3 col-lg-3 col-xs-3 col-sm-3 pad-zero'> <%= f.label :review, class:" marg-top" %> </div>

	<div class='col-md-9 col-lg-9 col-xs-9 col-sm-9 pad-zero'> <%= f.text_area :review, class:"form-control marg-bot", placeholder: "Address" %> </div>

	<div class='col-md-12 col-lg-12 col-xs-12 col-sm-12 marg-bot pad-zero'>
		<div class='col-md-3 col-lg-3 col-xs-3 col-sm-3 pad-zero'> <label> Avatar </label></div>

		<div class='col-md-9 col-lg-9 col-xs-9 col-sm-9 pad-zero'>
			<div class='col-md-6 col-lg-6 col-xs-6 col-sm-6 pad-zero'> 
				<%= image_tag(@review.cover_page.url(:thumb)) %> <br>
				<div class='col-md-2 col-lg-2 col-xs-2 col-sm-2 marg-top pad-zero'> <%= f.check_box(:default_avatar) %> </div>

				<div class='col-md-10 col-lg-10 col-xs-10 col-sm-10 marg-top marg-bot pad-zero'> <%= f.label(:default_avatar, "Default Review Avatar") %>  </div>

			</div>

			<div class='col-md-6 col-lg-6 col-xs-6 col-sm-6 pad-zero'>
				<%= f.label "Custom Avatar", class:"marg-top" %>
				<%= f.file_field :cover_page, class:"" %>
			</div>

		</div>

	</div>

	<button type='submit' class='btn btn-default btn-block'> <i class='fa fa-check'></i> Submit</button>

	<% end %>
</div>

