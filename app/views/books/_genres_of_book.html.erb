<% @genres_of_book.each do |genre| %>
<div class='col-md-3 col-lg-3 col-xs-3 col-sm-3 text-center pad-zero'>
	<%= link_to image_tag(genre.cover_page.url(:thumb)), genre %>
	<h6 class='text-center'> <%= link_to genre.name, genre %> </h6>
</div>

<% end %>
<div class='col-md-12 col-lg-12 col-xs-12 col-sm-12 marg-top'>
	<%= will_paginate @genres_of_book, param_name: 'genre_page',renderer: BootstrapPagination::Rails %>
</div>

<script type='text/javascript'>
	$(function(){ $('.pagination a').attr('data-remote', 'true') }); 
</script>
