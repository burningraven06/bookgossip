<% if @reviews_of_book.count>0 %>
<% @reviews_of_book.each do |review| %>
<div class='col-md-2 col-lg-2 col-xs-2 col-sm-2 text-center'>
	<%= image_tag(review.cover_page.url(:thumb)) %>
	<h6> <%= link_to review.heading, review %> </h6>
</div>

<% end %>
<div class='col-md-12 col-lg-12 col-xs-12 col-sm-12 marg-top'> 
	<%= will_paginate @reviews_of_book, param_name: 'review_page',renderer: BootstrapPagination::Rails %> 
</div>

<script type='text/javascript'>
	$(function(){ $('.pagination a').attr('data-remote', 'true') }); 
</script>

<% elsif not @reviews_of_book.count>0 %>
<div class='well col-md-6 col-lg-6 col-xs-6 col-sm-6 col-md-offset-3 col-lg-offset-3 col-xs-offset-3 col-sm-offset-3'>
	<h4>There are no reviews for <strong><%= @book.title %></strong> yet.</h4>
</div>

<% end %>