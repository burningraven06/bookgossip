$("#jquery_loading").css("display", "none");
<% if @review.errors.any? %>
$("#show_flash_messages").html("<%= j render'common_form_errors/atreview_form_errors' %>");
<% elsif not @review.errors.any? %>
$("#book_review_form").fadeOut(100);
$("#show_book").fadeIn(100);
$("#review_forms").fadeOut(100);
$("#show_flash_messages").html("<%= j render 'reviews/review_flash_messages/review_created' %>");
$("#book_reviews").html("<%= j render 'books/reviews_of_book' %>");
<% end %>