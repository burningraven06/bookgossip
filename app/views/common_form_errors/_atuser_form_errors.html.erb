<% if @user.errors.any? %>
<div class='alert alert-warning alert-dismissible' role='alert' style='margin-top: 3%;'>
	<button type="button" class="close" data-dismiss="alert" aria-label="Close"> <span aria-hidden="true">&times;</span> </button>
	<i class='fa fa-exclamation-triangle fa-2x' style='padding-right: 3%;'></i>Sorry, you've got <%= pluralize(@user.errors.count, "problem") %>.
	<dl class="dl-vertical ">
		<% @user.errors.full_messages.each do |msg| %>
		<dt class='marg-top'> <%= msg.truncate_words(1,  omission: ':') %> </dt>
		<dd> <%= msg %> </dd>
		<% end %>
	</dl>
</div>
<% end %>