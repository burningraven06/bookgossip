<% provide(:title, "Calendar") %>
<h1> Calendar </h1>

<%= month_calendar events: (@reviews + @books + @authors = @users) do |date, events| %>
<%= date.day %>
<% events.each do |event| %>
<%= link_to event.classification, event, class: "btn btn-default", title:"#{event.description}" %>

<% end %>
<% end %>