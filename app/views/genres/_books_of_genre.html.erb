<% if @books_of_genre.count>0 %>
<% @books_of_genre.each do |book| %>
<div class='col-md-2'>
	<%= image_tag(book.cover_page.url(:thumb)) %>
	<h6> <%= link_to book.title, book %> </h6>
</div>
<% end %>
<div class='col-md-6 col-md-offset-3 marg-top'> <%= will_paginate @books_of_genre, renderer: BootstrapPagination::Rails %> </div>
<script>	$(function(){ $('.pagination a').attr('data-remote', 'true') }); </script>
<% elsif not @books_of_genre.count>0 %>
<div class='well col-md-6 col-md-offset-3'><h4> There are no books for <strong><%= @genre.name %></strong></h4></div>
<% end %>