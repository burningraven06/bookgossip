<% if @books_of_genre.count>0 %>
<% @books_of_genre.each do |book| %>
<div class='col-md-2 col-lg-2 col-xs-2 col-sm-2'>
	<%= image_tag(book.cover_page.url(:thumb)) %>
	<h6> <%= link_to book.title, book %> </h6>
</div>

<% end %>
<div class='col-md-6 col-lg-6 col-xs-6 col-sm-6 col-md-offset-3 col-lg-offset-3 col-xs-offset-3 col-sm-offset-3 marg-top'>
	<%= will_paginate @books_of_genre, renderer: BootstrapPagination::Rails %> 
</div>

<script type='text/javascript'>
	$(function(){ $('.pagination a').attr('data-remote', 'true') }); 
</script>

<% elsif not @books_of_genre.count>0 %>
<div class='well col-md-12 col-lg-12 col-xs-12 col-sm-12 marg-top'>
	<h4> There are no books for <strong><%= @genre.name %></strong></h4>
</div>

<% end %>