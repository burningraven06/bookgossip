<h1 class='marg-bot2 text-center' id='form_heading'> </h1> 
<div class='well col-md-4 col-lg-4 col-xs-4 col-sm-4 text-center'>
	<%= image_tag(@genre.cover_page.url(:medium)) %>
	<h3 id='jquery_genre_name'></h3>
</div>

<div class='col-md-4 col-lg-4 col-xs-4 col-sm-4 pad-zero form_border'>
	<%= form_for(@genre, html:{multipart: true}, remote: true) do |f| %>
	<% render 'common_form_errors/atgenre_form_errors' %>
	<%= hidden_field_tag :authenticity_token, form_authenticity_token %>

	<div class='col-md-3 col-lg-3 col-xs-3 col-sm-3 pad-zero'> <%= f.label :name, class:" marg-top" %> </div>

	<div class='col-md-9 col-lg-9 col-xs-9 col-sm-9 pad-zero'> <%= f.text_field :name, class:"form-control marg-bot", placeholder: "Genre Name", id:"form_genre_name" %> </div>

	<div class='col-md-12 col-lg-12 col-xs-12 col-sm-12 marg-bot pad-zero'>
		<div class='col-md-6 col-lg-6 col-xs-6 col-sm-6 pad-zero'> 
			<div class='col-md-2 col-lg-2 col-xs-2 col-sm-2 marg-top pad-zero'>	<%= f.check_box(:default_avatar) %>	</div>

			<div class='col-md-10 col-lg-10 col-xs-10 col-sm-10 marg-top marg-bot pad-zero'> <%= f.label(:default_avatar, "Default Genre Avatar") %>	</div>

		</div>

		<div class='col-md-6 col-lg-6 col-xs-6 col-sm-6 pad-zero'>
			<%= f.label "Custom Avatar", class:"marg-top" %>
			<%= f.file_field :cover_page, class:"" %>
		</div>

	</div>

	<button type='submit' class='btn btn-success btn-block'> <i class='fa fa-check'></i> Submit</button>
	<% end %>
</div>

<div class='col-md-4 col-lg-4 col-xs-4 col-sm-4 text-center'>
	<%= link_to image_tag('button_icons/back_button.png'), genres_path %>
	<span style='margin-left: 2%;'><%= link_to "Back", genres_path %></span>
</div>

<script type='text/javascript'> 
	$("#form_genre_name").keyup(function(){
		$("#jquery_genre_name").html($(this).val());
	});
	$("form").submit(function(){
		$("#jquery_loading").css("display", "block"); 
	});
</script>