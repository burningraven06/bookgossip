$("#jquery_loading").css("display", "none");
<% if @genre.errors.any? %>
	$("#show_flash_messages").html("<%= j render'common_form_errors/atgenre_form_errors' %>");
<% elsif not @genre.errors.any? %>
	$("#genre_forms").fadeOut(100);
	$("#all_genres_div").html("<%= j render 'genres' %>");
	$("#show_flash_messages").html("<%= j render'genres/genre_flash_messages/genre_created' %>");
	$("#show_all_genres").fadeIn(100);
<% end %>