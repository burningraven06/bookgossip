<% if @topics_of_group.count >0 %>
<% @topics_of_group.each do |topic| %>
<div class='col-md-6 col-lg-6 col-xs-6 col-sm-6'>
	<%= link_to image_tag(topic.topic_icon.url(:thumb)), topic %>
	<h6> <%= link_to topic.heading, topic %> </h6>
</div>

<% end %>
<div class='col-md-6 col-lg-6 col-xs-6 col-sm-6 col-md-offset-3 col-lg-offset-3 col-xs-offset-3 col-sm-offset-3 marg-top'>
	<%= will_paginate @topics_of_group, renderer: BootstrapPagination::Rails %> 
</div>

<script type='text/javascript'>
	$(function(){ $('.pagination a').attr('data-remote', 'true') }); 
</script>

<% elsif not @topics_of_group.count>0 %>
<div class='well col-md-6 col-lg-6 col-xs-6 col-sm-6 col-md-offset-3 col-lg-offset-3 col-xs-offset-3 col-sm-offset-3'>
	<h4> There are no topics in <strong><%= @group.name %></strong></h4>
	<h6> Please Click the <strong>Plus Icon</strong> to create a New Topic</h6>

</div>

<% end %>