<% @topics_of_group.each do |topic| %>
<div class='col-md-6'>
	<%= image_tag(topic.topic_icon.url(:thumb)) %>
	<h6> <%= link_to topic.heading, topic %> </h6>
</div>
<% end %>
<div class='col-md-6 col-md-offset-3 marg-top'> <%= will_paginate @topics_of_group, renderer: BootstrapPagination::Rails %> </div>
<script>	$(function(){ $('.pagination a').attr('data-remote', 'true') }); </script>
