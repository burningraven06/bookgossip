$("#landingpg_jquery_loading").css("display", "none");
<% if @invalid_email %>
	$("#password_reset_messages").html("<%= j render 'email_not_registered' %>");
	$("#password_reset_email_field").val("");
	$("#login_signup_div").html("<%= j render 'form' %>");
<% elsif @mail_sent %>
	$("#password_reset_messages").html("<%= j render 'password_reset_email_sent' %>");
	$("#password_reset_email_field").val("");
<% end %>
