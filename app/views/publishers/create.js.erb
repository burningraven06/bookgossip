$("#jquery_loading").css("display", "none");
<% if @publisher.errors.any? %>
$("#show_flash_messages").html("<%= j render'common_form_errors/atpublisher_form_errors' %>");
<% elsif not @publisher.errors.any? %>
$("#publisher_forms").fadeOut(100);
