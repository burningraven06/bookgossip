$("#show_flash_messages").html("<%= j render 'publishers/publisher_flash_messages/publisher_created' %>");
$("#show_flash_messages_newview").html("<%= j render'publishers/publisher_flash_messages/publisher_created_newview' %>");
$("#newview_publisher_form").fadeOut(100);
$("#new_view_heading").fadeOut(100);
$("#show_all_publishers").fadeIn(100);
<% end %>