<%= form_tag(reviews_path, method: 'get', remote: true) do %>
<div class='col-md-9 pad-zero'> <%= text_field_tag :search, params[:search], class:"form-control", placeholder: "Type to search ...", id:"review_search_textfield" %> </div>
<div class='col-md-3 pad-zero'> <button type='submit' class='btn btn-default'> <i class='fa fa-search'></i> Search</button> </div>
<% end %>