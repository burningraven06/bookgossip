<% @topics.each do |topic| %>
<div class='col-md-3 col-lg-3 col-xs-3 col-sm-3 marg-top' id="topic_<%= topic.id %>"> 
	<%= link_to image_tag("medium/default_topic.png"), topic %> <br>
	<div class='marg-top marg-bot'>			
		<h4><%= link_to topic.heading, topic %> <small> <%= topic.reply_count %> Replies </small></h4>
		<h6 class='marg-bot'><%= link_to topic.user.name, topic.user %> on <%= topic.created_at.strftime("%d/%b/%Y") %></h6>
	</div>

</div>

<% end %>
<div class='marg-top col-md-6 col-lg-6 col-xs-6 col-sm-6 col-md-offset-3 col-lg-offset-3 col-xs-offset-3 col-sm-offset-3'>
	<%= will_paginate @topics, renderer: BootstrapPagination::Rails %>
</div>

<script type='text/javascript'>
	$(function(){ $('.pagination a').attr('data-remote', 'true') }); 
</script>