$("#group_topic_form").html("<%= j render 'form' %> ");
$("#groups_path_button").hide();
$("#group_new_topic_button").hide();
$("#group_topics_div").hide();
$("#form_heading").html("New Topic")
$("#close_topic_form").click(function(){
	$("#group_topic_form").html("");
	$("#groups_path_button").show();
	$("#group_new_topic_button").show();
	$("#group_topics_div").show();
});