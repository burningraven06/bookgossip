<% provide(:title, @topic.heading)%>
<div id="show_flash_messages" class='col-md-6 col-md-offset-3'></div>
<div class = 'col-md-12' id='show_topic_div'>
	<div class= 'col-md-2'> 
		<%= link_to '<i class="fa fa-chevron-left"></i> Back'.html_safe, group_path(@topic.group_id), class: "btn btn-default" %>
	</div>
	<div class='col-md-8'>
		<h1> <strong> <%= image_tag(@topic.topic_icon.url(:thumb)) %> <%= @topic.heading %></strong> </h1>
		Started by <%= link_to @topic.user.name, @topic.user %> in <%= link_to @topic.group.name, @topic.group %>
	</div>
	<div class='col-md-2 marg-zero'>
		<% if topic_owner(@topic.id) %> 
		<%= link_to '<i class="fa fa-remove"></i> Delete'.html_safe, @topic, method: :delete, data: { confirm: 'Are you sure you want to delete?' }, class: "btn btn-default pull-right", title:"Delete #{@topic.heading}", id: "topic_delete_button" %>   
		<% end %>
	</div>

	<div class='col-md-12 marg-top2' style='padding: 2%; border: 1px solid #c4c4c4;'> <%= @topic.body %>	</div>

	<div id = 'replies_of_topic_div'>
		<% @replies_of_topic.each do |r| %>
		<div class='col-md-12 marg-zero' style='padding: 2%; border: 1px solid #c4c4c4;'>
			<%= r.content %>
			<div class = 'pull-right'>
				- <%= link_to r.user.name, r.user %>
				<%= time_ago_in_words(r.created_at) %> ago
			</div>
		</div>
		<% end %>
	</div>
	
	<%= link_to "<i class= 'fa fa-plus'></i> Reply".html_safe, topic_new_reply_path,  id: "topic_new_reply_button", class: "btn btn-default pull-left marg-top", remote: true %>
</div>
<div class='col-md-12' id='topic_reply_form_div'></div>
