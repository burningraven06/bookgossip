$("#edit_topic_button").click(function(){
	$("#topic_form_div").html("<%= j render 'edit_topic_form' %>");
	$("#form_heading").html("<i class='fa fa-pencil fa-2x iconspace'></i> <%= @topic.heading %>");
	#("#topic_delete_button").hide();
	$("#show_topic_div").fadeOut(100);
	$("#topic_form_div").fadeIn(100);
	$("#close_topic_form").click(function(){
		$("#topic_form_div").html("");
		$("#topic_delete_button").show();
		$("#show_topic_div").show();
	});

});