<% provide(:title, @topic.heading)%>
<div id="show_flash_messages" class='col-md-6 col-lg-6 col-xs-6 col-sm-6 col-md-offset-3 col-lg-offset-3 col-xs-offset-3 col-sm-offset-3'></div>
<div class='col-md-12 col-lg-12 col-xs-12 col-sm-12' id='topic_form_div'></div>
<div class='col-md-12 col-lg-12 col-xs-12 col-sm-12' id='show_topic_div'>

<h1 class='text-center'> <strong> <%= @topic.heading %></strong> </h1>
<% if topic_owner(@topic.id) %> 
<%= link_to '<i class="fa fa-remove"></i> Delete'.html_safe, @topic, method: :delete, data: { confirm: 'Are you sure you want to delete?' }, class: "btn btn-default pull-right", remote: true, title:"Delete #{@topic.heading}", id: "topic_delete_button" %>   
<%= link_to '<i class="fa fa-pencil"></i> Edit'.html_safe, update_group_topic_path(@topic), class: "btn btn-default pull-right", id:"edit_topic_button" %>
<% end %>


<strong>Body:</strong>
<%= @topic.body %>

<p>
	<strong>User:</strong>
	<%= @topic.user.name %>
</p>

<p>
	<strong>Group:</strong>
	<%= @topic.group.name %>
</p>

<p>
	<strong>Default avatar:</strong>
	<%= @topic.default_avatar %>
</p>

<%= link_to 'Back', group_path(@topic.group_id) %>
</div>