<div id="show_flash_messages_login_div" class='col-md-12 pad-zero marg-bot'></div>

<h2 class='text-center'> Sign In</h2>
<%= form_for(:session, url: login_path, remote: true) do |f| %>
<%= f.email_field :email, class: "form-control marg-top", placeholder: "Email" , required: true%>
<%= f.password_field :password, class: "form-control marg-top ", placeholder: "Password", required: true %>
<div class='col-md-6 marg-top marg-bot pad-zero'>
	<%= check_box_tag :remember_me,1,params[:remember_me], class:" marg-top col-md-2" %>		
	<%=f.label :remember_me, "Remember Me", class:' pad-zero col-md-10 pull-right' %>
</div>
<%= link_to "Forgot Password?", new_password_reset_path, class:'pull-right marg-bot marg-top', remote: true %>
<button type='submit' class="btn btn-info btn-block marg-top"> <i class='fa fa-chevron-right'> </i> Log In</button>
<% end %>