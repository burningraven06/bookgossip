<div id="show_flash_messages_signup_div" class='col-md-12 pad-zero marg-bot'></div>

<h2 class='text-center'> Sign Up</h2>
<%= form_for(@user, url: common_signup_path, remote: true) do |f| %>
<%= render 'common_form_errors/atuser_form_errors' %>

<%= f.text_field :name, class:"form-control marg-top", placeholder:"Your full name", required: true, id: "signup_fullname_field" %>
<%= f.email_field :email, class:"form-control marg-top", placeholder: "user@example.com" , required: true, id: "signup_email_field" %>
<%= f.password_field :password, class:"form-control marg-top", placeholder: "Password, 8 Characters Minimum" , required: true, id: "signup_password_field"%>
<%= f.password_field :password_confirmation, class:"form-control marg-top", placeholder:"Confirm Password" , required: true, id: "signup_passwordconf_field" %>

<div class='col-md-6 pad-zero marg-top '>
	<%= f.label :gender, "Sex", class:"text-center" %>
	<div class='col-md-12 pad-zero marg-top '>
		<%= f.select :gender, options_for_select([['Male', 'Male'], ['Female', 'Female']], @user.gender), {}, class:"form-control", required: true, id: "signup_gender_select" %>
	</div>
</div>

<div class='col-md-6 pad-zero marg-top marg-bot text-center'>
	<%= f.label :account_type, "Account", class:"text-center" %>
	<div class='col-md-6 marg-bot marg-top'>
		<%= f.radio_button :account_type,  'writer', class: "marg-top", id: "signup_writer_radiobutton" %>
		<%= f.label :account_type_writer,  "Critic" %>
	</div>
	<div class="col-md-6 marg-top marg-bot">
		<%= f.radio_button :account_type, 'reader', class: "marg-top", id: "signup_reader_radiobutton" %>
		<%= f.label :account_type_reader, "Reader" %>
	</div>
</div>

<button type='submit' class='btn btn-info btn-block' id="signup_submit_button"> <i class='fa fa-chevron-right'> </i> Sign Up</button>

<% end %>
<script type='text/javascript'> 
	$("#signup_submit_button").click(function(){
		$("#jquery-loading").css("display", "block"); 
		$("#show_flash_messages_signup_div").html("");	
	});
</script>
