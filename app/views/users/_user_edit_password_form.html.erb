<%= form_for(@user, url: update_user_password_path(current_user), html: { multipart: true }, remote:true) do|f| %>
<%= render 'common_form_errors/atuser_form_errors' %>
<%= hidden_field_tag :authenticity_token, form_authenticity_token %>
<div class='marg-top pad-zero'>
	<h4 class='text-center marg-top'> Account Settings </h4>
	<div class='col-md-4 col-lg-4 col-xs-4 col-sm-4 marg-top pad-zero'>	<%= f.label :current_password, "Current Password" %>	</div>

	<div class='col-md-8 col-lg-8 col-xs-8 col-sm-8 pad-zero'> <%= f.password_field :current_password, class:'form-control marg-top', required: true, id: "current_password_field" %>	</div>

	<div class='col-md-4 col-lg-4 col-xs-4 col-sm-4 marg-top pad-zero'>		<%= f.label :password, "New Password" %> </div>

	<div class='col-md-8 col-lg-8 col-xs-8 col-sm-8 pad-zero'> <%= f.password_field :password, class:'form-control marg-top', id:"new_pass", required: true%>	</div>

	<div class='col-md-4 col-lg-4 col-xs-4 col-sm-4 marg-top pad-zero'>	<%= f.label :password_confirmation, "Confirm New Password" %>	</div>

	<div class='col-md-8 col-lg-8 col-xs-8 col-sm-8 marg-bot pad-zero'>	<%= f.password_field :password_confirmation, class:'form-control marg-top', id:"new_pass_confirm", required: true %> </div>

	<button type='submit' class='btn btn-primary btn-block'><i class='fa fa-check'></i> Update Password</button>
</div>

<% end %>

<script type='text/javascript'> 
	$("form").submit(function(){
		$("#jquery_loading").css("display", "block"); 
		// $("#show_flash_messages").html("");	
	});
</script>