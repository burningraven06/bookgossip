<style>	.col-md-6{padding:0;} .col-md-4{padding:0} .col-md-8{padding:0}</style>
<%= form_for(@user, url: update_user_password_path(current_user), html: { multipart: true }, remote:true) do|f| %>
<%= render 'common_form_errors/atuser_form_errors' %>
<%= hidden_field_tag :authenticity_token, form_authenticity_token %>
<div class='marg-top'>
	<h4 class='text-center marg-top'> Account Settings </h4>
	<div class='col-md-4 marg-top'>	<%= f.label :current_password, "Current Password" %>	</div>
	<div class='col-md-8'> <%= f.password_field :current_password, class:'form-control marg-top', required: true %>	</div>
	<div class='col-md-4 marg-top'>		<%= f.label :password, "New Password" %> </div>
	<div class='col-md-8'> <%= f.password_field :password, class:'form-control marg-top', id:"new_pass", required: true %>	</div>
	<div class='col-md-4 marg-top'>	<%= f.label :password_confirmation, "Confirm New Password" %>	</div>
	<div class='col-md-8 marg-bot'>	<%= f.password_field :password_confirmation, class:'form-control marg-top', id:"new_pass_confirm", required: true %> </div>
	<button type='submit' class='btn btn-primary btn-block'><i class='fa fa-check'></i> Update Password</button>
</div>
<% end %>
