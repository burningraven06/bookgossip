<% provide(:title, "Update") %>
<div id="show_flash_messages" class='col-md-6 col-lg-6 col-xs-6 col-sm-6 col-md-offset-3 col-lg-offset-3 col-xs-offset-3 col-sm-offset-3'></div>

<div class='col-md-12 col-lg-12 col-xs-12 col-sm-12'>
	<div class='col-md-4 col-lg-4 col-xs-4 col-sm-4 text-center pad-zero'>
		<%= image_tag(@user.avatar.url(:medium)) %>
		<h3 class='text-capitalize'> <%= @user.account_type %>  </h3>
		<h6> Member Since: <%= @user.created_at %> </h6>

		<div class='marg-top10 '>
			<div class='col-lg-6 col-sm-6 col-md-6 col-xs-6 pad-zero'> 
				<button type='button' class='btn btn-block btn-primary' id='profile_button' title='Update your Profile' style='padding:10%;'> <%= image_tag('button_icons/user_settings.png') %> </button> 
				<h5 class='marg-top'> Personal Information</h5>
			</div>
			<div class='col-lg-6 col-sm-6 col-md-6 col-xs-6 pad-zero'> 
				<button type='button' class='btn btn-block btn-warning' id='password_button' title='Update your Password' style='padding:10%;'> <%= image_tag('button_icons/door_key.png') %></button>
				<h5 class='marg-top'> Account Settings</h5>
			</div>
		</div>

	</div>

	<div class='col-md-4 col-lg-4 col-xs-4 col-sm-4 col-md-offset-2 col-lg-offset-2 col-sm-offset-2 col-xs-offset-2 pad-zero' id='user_form_div'>
		<div class='well marg-top10' >
			<h4 class='text-center' style='line-height: 200%;'>Update Your Profile Information & Account Settings</h4></div>
		</div>


	</div>
	<script type='text/javascript'>

		$("#profile_button").click(function(){
			$("#user_form_div").html("<%= j render'user_edit_profile_form' %> ");
			$("#user_form_div").fadeIn(100);
		});
		$("#password_button").click(function(){
			$("#user_form_div").html("<%= j render'user_edit_password_form' %> ");
			$("#user_form_div").fadeIn(100);
		});
	</script>
