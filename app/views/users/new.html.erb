<% provide(:title, "Login | Signup") %>

<div id="show_flash_messages" class='col-md-6 col-md-offset-3'></div>

<div class='col-md-4 landingpg_form_background'>
	<link href="https://fonts.googleapis.com/css?family=Vollkorn" rel="stylesheet">
	<h1 class='landing_page_heading'> Book Gossips</h1>
	<button type='button' class='btn col-md-6 ' id='signin_button'> Sign In</button>
	<button type='button' class='btn col-md-6 ' id='signup_button'> Sign Up</button>
	
	<div id="login_signup_div" style='color:#fff;'></div>
</div>
<div class='col-md-4 text-center'>
	<div class='col-md-4 col-md-offset-2 text-center marg-top10' id="landingpg_jquery_loading"> <%= image_tag("js_loading/hourglass.svg")%> </div>

	<div id="show_flash_messages_signup_div" class=' col-md-offset-3 pad-zero marg-top10'></div>
	<div id="show_flash_messages_login_div" class='col-md-offset-3 pad-zero marg-top10'></div>
</div>


<script>
	$(document).ready(function(){
		$("#navheader").remove();
		$("#main-container").css("margin-top", 0);
		$(".landing_pg_img").css("display", 'block');
		$("body").css("margin", 0);
	});

	$("#login_signup_div").html("<%= j render'login_partial' %> ");
	$("#signup_button").click(function(){
		$("#login_signup_div").html("<%= j render'signup_partial' %> ");
		$("#login_signup_div").fadeIn(200);
	});
	$("#signin_button").click(function(){
		$("#login_signup_div").html("<%= j render'login_partial' %> ");
		$("#login_signup_div").fadeIn(200);
	});
	
</script>