$("#jquery-loading").css("display", "none");
$("#current_password_field").val("");
$("#new_pass_confirm").val("");
$("#new_pass").val("");

<% if @correct_password %>
	<% if @user.errors.any? %>
		$("#show_flash_messages").html("<%= j render'common_form_errors/atuser_form_errors' %>");
		<% elsif not @user.errors.any? %>
		$("#user_all_settings").fadeOut(100);
		$("#show_flash_messages").html("<%= j render'users/user_flash_messages/user_password_updated' %>");
		$("#user_profile_show_div").fadeIn(100);
	<% end %>
<% elsif not @correct_password %>
	$("#show_flash_messages").html("<%= j render'users/user_flash_messages/user_current_password_incorrect' %>");
<% end %>
